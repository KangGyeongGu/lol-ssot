{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WorkerResult",
  "type": "object",
  "required": [
    "run_id",
    "agent_id",
    "task_id",
    "target",
    "status",
    "summary",
    "findings",
    "metrics",
    "started_at",
    "finished_at"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 8
    },
    "agent_id": {
      "type": "string",
      "minLength": 3
    },
    "task_id": {
      "type": "string",
      "minLength": 3
    },
    "target": {
      "type": "object",
      "required": [
        "kind",
        "id"
      ],
      "properties": {
        "kind": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "warn",
        "fail",
        "error"
      ]
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "severity",
          "code",
          "message",
          "dedupe_key",
          "evidence",
          "proposed_fix"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "critical",
              "high",
              "medium",
              "low"
            ]
          },
          "code": {
            "type": "string",
            "minLength": 2
          },
          "message": {
            "type": "string",
            "minLength": 3
          },
          "dedupe_key": {
            "type": [
              "string",
              "null"
            ]
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "path",
                "line",
                "snippet"
              ],
              "properties": {
                "path": {
                  "type": "string",
                  "minLength": 1
                },
                "line": {
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 1
                },
                "snippet": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "proposed_fix": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "additionalProperties": false
      }
    },
    "metrics": {
      "type": "object",
      "required": [
        "files_scanned",
        "links_checked",
        "relations_checked"
      ],
      "properties": {
        "files_scanned": {
          "type": "integer",
          "minimum": 0
        },
        "links_checked": {
          "type": "integer",
          "minimum": 0
        },
        "relations_checked": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "finished_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
