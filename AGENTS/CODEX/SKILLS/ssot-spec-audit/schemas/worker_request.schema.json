{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WorkerRequest",
  "type": "object",
  "required": [
    "run_id",
    "agent_id",
    "task_id",
    "repo_root",
    "mode",
    "target",
    "severity_policy",
    "output_path"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 8
    },
    "agent_id": {
      "type": "string",
      "minLength": 3
    },
    "task_id": {
      "type": "string",
      "minLength": 3
    },
    "repo_root": {
      "type": "string",
      "minLength": 1
    },
    "mode": {
      "type": "string",
      "enum": [
        "full",
        "partial"
      ]
    },
    "changed_files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "target": {
      "type": "object",
      "required": [
        "kind",
        "id"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "area",
            "relation",
            "duplication",
            "agent_spec",
            "traceability"
          ]
        },
        "id": {
          "type": "string",
          "minLength": 2
        },
        "scope_paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "checks": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": true
    },
    "severity_policy": {
      "type": "object",
      "required": [
        "fail_on"
      ],
      "properties": {
        "fail_on": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        }
      },
      "additionalProperties": true
    },
    "output_path": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": true
}
